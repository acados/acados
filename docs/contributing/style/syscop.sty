% change title background color
\setbeamercolor{title}{bg=ufblue}

% uncomment to remove navigation buttons
\setbeamertemplate{navigation symbols}{}

% modify title slide
\newcommand{\InsertTitle}{
	{
		\setbeamertemplate{logo}{} % remove logo (if any)
		\setbeamertemplate{headline}{} % remove header (if any)
		\setbeamertemplate{footline}{} % remove footer (if any)
		\begin{frame}[noframenumbering] % do not count title frame in frame numbers
			\titlepage
			\vspace{-15pt}
			\begin{figure}
				\centering
				\includegraphics[scale = 0.25]{figures/UFlogo}
			\end{figure}
		\end{frame}
	}
}

% correct font in math mode
\usefonttheme[onlymath]{serif}
