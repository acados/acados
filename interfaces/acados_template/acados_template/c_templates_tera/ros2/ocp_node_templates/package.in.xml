<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
    <name>{{ ros_opts.package_name }}</name>
    <version>0.1.0</version>
    <description>A Generic ROS2 node for the acados solver</description>
    <maintainer email="acados.ros@email.com"> Acados Ros</maintainer>
    <license>MIT</license>

    <buildtool_depend>ament_cmake</buildtool_depend>

    <depend>rclcpp</depend>
    <depend>std_msgs</depend>
    <depend>{{ ros_opts.package_name }}_interface</depend>

    <exec_depend>python3-lark</exec_depend>
    <exec_depend>python3-numpy</exec_depend>
    
    <test_depend>launch_testing</test_depend>
    <test_depend>launch_testing_ament_cmake</test_depend>
    <test_depend>python3-pytest</test_depend>

    <export>
        <build_type>ament_cmake</build_type>
    </export>
</package>